<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Cattle WebApp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <div class="caption-full">
                    <h4><a>Shipment LNC # <%=shipment.shippingnumber%></a></h4>
		    <p>APEC Market: <%= shipment.market %></p>
                    <p>Load date: <%= shipment.loaddate %></p>
		    <p>Ship Name: <%= shipment.shipname %> </p>
		    <p>
                      <em>Submitted By <%= shipment.author.username %> <%= moment(shipment.createdAt).fromNow() %></em>
                    </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/shipment/<%= shipment._id %>/update/new">Add New Update from Importer</a>
                </div>
                <hr>
                <% shipment.updates.forEach(function(update){ %>
                    <div class="row">
                        <div class="col-md-12">
			  <strong><%= update.author.username %></strong>
                            <span class="pull-right"><%= moment(update.createdAt).fromNow() %></span>
                                <p>Update Number: <%= update.updatenumber %></p>
			        <p>Market: <%= update.market %></p>
				<p>Update Date: <%= update.updatedtill %></p>
				<p>Importer: <%= update.importer %></p>
				<p>Feedlot: <%= update.feedlot %></p>
				<p>Cattle Processed: <%=  update.cowsprocessed %></p>
				<p>Live Cattle Processed: <%= update.cowsprocessed %></p>
				<p>Dead Cattle: <%= update.cowsmortal %></p>
				<p>Untracked Cattle: <%= update.cowsuntracked %></p>
                          </div>
                      </div>
		   <hr>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>

